{
  "name": "pragma-web",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@glennsl/bs-json": "^3.0.0",
    "bs-fetch": "^0.3.0",
    "bs-platform": "^7.0.1",
    "bs-webapi": "^0.10.0",
    "classnames": "^2.2.6",
    "codemirror": "^5.40.2",
    "codemirror-mode-elixir": "^1.1.2",
    "dayjs": "^1.7.7",
    "draft-convert": "^2.1.4",
    "draft-js": "^0.10.5",
    "draft-js-checkable-list-item": "^3.0.4",
    "draft-js-list-depth-plugin": "^1.0.1",
    "draftjs-conductor": "^0.3.0",
    "idb": "^2.1.3",
    "minireset.css": "^0.0.3",
    "mousetrap": "^1.6.2",
    "nanoid": "^1.2.5",
    "react": "^16.4.1",
    "react-codemirror2": "^5.1.0",
    "react-dom": "^16.4.1",
    "reason-promise": "^1.0.2",
    "reason-react": "^0.5.3"
  },
  "scripts": {
    "start": "node scripts/start.js",
    "build": "node scripts/build.js",
    "compile": "bsb -make-world",
    "compile:watch": "bsb -make-world -w",
    "test": "node scripts/test.js --env=jsdom",
    "format": "bsrefmt --print-width=100",
    "format-all": "find src -name '*.re' | xargs bsrefmt --in-place --print-width=100"
  },
  "devDependencies": {
    "@glennsl/bs-jest": "^0.4.2",
    "autoprefixer": "7.1.6",
    "babel-core": "6.26.0",
    "babel-jest": "20.0.3",
    "babel-loader": "7.1.5",
    "babel-preset-react-app": "^3.1.0",
    "babel-runtime": "6.26.0",
    "bs-loader": "^2.0.3",
    "case-sensitive-paths-webpack-plugin": "2.1.1",
    "chalk": "1.1.3",
    "clean-webpack-plugin": "^0.1.19",
    "css-loader": "1.0.0",
    "dotenv": "4.0.0",
    "file-loader": "^1.1.11",
    "fs-extra": "^7.0.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "20.0.4",
    "mini-css-extract-plugin": "^0.4.1",
    "node-sass": "^4.9.2",
    "optimize-css-assets-webpack-plugin": "^5.0.0",
    "postcss-flexbugs-fixes": "3.2.0",
    "postcss-loader": "^2.1.6",
    "react-dev-utils": "6.0.0-next.3e165448",
    "sass-loader": "^7.0.3",
    "style-loader": "^0.21.0",
    "sw-precache-webpack-plugin": "0.11.5",
    "url-loader": "^1.0.1",
    "webpack": "^4.16.0",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": ">=3.1.11",
    "webpack-hot-middleware": "^2.22.2",
    "webpack-pwa-manifest": "^3.7.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{re,ml}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/*test.{ml,re,js}"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^.+\\.(re|ml)$": "bs-loader",
      "^(?!.*\\.(js|jsx|mjs|css|json|re|ml)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs|re|ml)$"
    ],
    "moduleFileExtensions": [
      "re",
      "ml",
      "web.js",
      "mjs",
      "js",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ]
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  }
}
